<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radialgradientback"
    tools:context="app.simonsays.com.simonsays_app.activities.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.example.darielcruzhdez.myapp.activities.MainActivity">

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        style="@style/MenuStyle"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/scoreBtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/scores"
        android:textSize="30sp"
        style="@style/MenuStyle"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/exitGameBtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/exit_game"
        style="@style/MenuStyle"
        android:gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
